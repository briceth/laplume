
<% @writers.each do |writer| %>
<div class="container">
  <div class="row">
    <%= link_to user_path(writer) do %>
      <div class="card-profil-search" >
        <div class="col-xs-3">
          <div class="panel-body">
            <div class="img-container">
              <% if writer.photo? %>
                <%= cl_image_tag(writer.photo.path, { size: '125x125', crop: :thumb }) %>
              <% else %>
                <%= image_tag "user-icon.png", class: "avatar-large margin-right-5px" %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-xs-3">
          <h4><%= writer.first_name %> <%= writer.last_name %></h4><br>
          <%= writer.title %>
        </div>

        <div class="col-xs-3">
        </div>

        <div class="col-xs-3">
          Tarif par jour : <br>
          <%= writer.price %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

